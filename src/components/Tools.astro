---
const tools = ["Astro","Tailwind","TypeScript","Vite","Framer Motion","Figma"];
---
<section id="herramientas" class="section">
  <div class="container">
    <h2 class="section-title text-3xl md:text-4xl font-bold mb-8" data-watermark="TOOLS">
      Exploring the Tools Behind My Designs
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
      {tools.map((t) => (
        <div class="card p-4 text-center">{t}</div>
      ))}
    </div>
  </div>
</section>
