---
// tools.astro
const tools = [
  { name: "WordPress", icon: "/images/wordpress.svg" },
  { name: "Astro", icon: "/images/astro.svg" },
  { name: "Tailwind", icon: "/images/tailwind.svg" },
  { name: "JavaScript", icon: "/images/javascript.svg" },
  { name: "TypeScript", icon: "/images/typescript.svg" },
  { name: "Figma", icon: "/images/figma.svg" },
];
---

<section id="herramientas" class="section">
  <div class="container">
    <h2 class="section-title text-3xl md:text-4xl font-bold mb-8" data-watermark="TOOLS">
      Exploring the Tools Behind My Designs
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
      {tools.map((t) => (
        <div class="card flex items-center justify-center gap-2 p-4 text-center bg-[#111] rounded-lg border border-[#222] hover:bg-[#1a1a1a] transition">
          <img src={t.icon} alt={t.name} class="w-5 h-5" />
          <span class="text-sm font-medium">{t.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
